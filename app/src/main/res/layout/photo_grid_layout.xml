<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motion_scene"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/zoom_scene"
    tools:context=".MainActivity">

    <Space
        android:id="@+id/boundaries"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Space
        android:id="@+id/horizontal_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="3"
        app:layout_constraintTop_toTopOf="@+id/boundaries"
        app:layout_constraintStart_toStartOf="@+id/boundaries"
        app:layout_constraintEnd_toEndOf="@+id/boundaries"
        app:layout_constraintBottom_toBottomOf="@+id/boundaries"
        />
    <Space
        android:id="@+id/vertical_middle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="0.3333"
        app:layout_constraintTop_toTopOf="@+id/boundaries"
        app:layout_constraintStart_toStartOf="@+id/boundaries"
        app:layout_constraintEnd_toEndOf="@+id/boundaries"
        app:layout_constraintBottom_toBottomOf="@+id/boundaries"
        />
    <View android:id="@+id/photo_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/redLight"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_middle"
        />
    <View android:id="@+id/photo_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/red"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/vertical_middle"
        app:layout_constraintEnd_toEndOf="@id/vertical_middle"
        />
    <View android:id="@+id/photo_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/redDark"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/vertical_middle"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View android:id="@+id/photo_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/greenLight"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="@id/horizontal_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_middle"
        />
    <View android:id="@+id/photo_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/green"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="@id/horizontal_middle"
        app:layout_constraintStart_toStartOf="@id/vertical_middle"
        app:layout_constraintEnd_toEndOf="@id/vertical_middle"
        />
    <View android:id="@+id/photo_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/greenDark"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toTopOf="@id/horizontal_middle"
        app:layout_constraintStart_toEndOf="@id/vertical_middle"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <View android:id="@+id/photo_7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blueLight"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/horizontal_middle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vertical_middle"
        />
    <View android:id="@+id/photo_8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blue"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/horizontal_middle"
        app:layout_constraintStart_toStartOf="@id/vertical_middle"
        app:layout_constraintEnd_toEndOf="@id/vertical_middle"/>
    <View android:id="@+id/photo_9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/blueDark"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintTop_toBottomOf="@id/horizontal_middle"
        app:layout_constraintStart_toEndOf="@id/vertical_middle"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.motion.widget.MotionLayout>
